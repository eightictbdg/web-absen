<table cellspacing="0">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Username</th>
      <th>Class</th>
      <th>Password</th>
      <th>#</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>New</th>
      <form method="POST" class="form">
        <th><%- form.fields.name.toHTML() %></th>
        <th><%- form.fields.username.toHTML() %></th>
        <th><%- form.fields.class.toHTML() %></th>
        <th><%- form.fields.password.toHTML() %></th>
        <th><button type="submit" class="button-general">Add</button></th>
      </form>
    </tr>
    <tr>
      <th></th>
      <th>
        <% if (form.fields.name.errorHTML()) {%>
          <%- form.fields.name.errorHTML() %>
        <% } %>
      </th>
      <th>
        <% if (form.fields.username.errorHTML()) {%>
          <%- form.fields.username.errorHTML() %>
        <% } %>
      </th>
      <th>
        <% if (form.fields.class.errorHTML()) {%>
          <%- form.fields.class.errorHTML() %>
        <% } %>
      </th>
      <th>
        <% if (form.fields.password.errorHTML()) {%>
          <%- form.fields.password.errorHTML() %>
        <% } %>
      </th>
    </tr>
  </tfoot>
  <tbody>
    <% users.forEach(function(user){ %>
      <tr>
        <td><a href="user/<%= user.id %>"><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <td><%= user.class %></td>
        <td>***********</td>
        <td>
          <a href="user/<%= user.id %>/update">Edit</a>
          <a href="user/<%= user.id %>/delete">Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>