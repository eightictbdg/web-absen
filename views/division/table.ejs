<table cellspacing="0">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>#</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>New</th>
      <form method="POST" class="form">
        <th>
          <%- form.fields.name.toHTML() %> <br>
        </th>
        <th>
          <button type="submit" class="button-general">Add</button>
        </th>
      </form>
    </tr>
    <tr>
      <th></th>
      <th>
        <% if (form.fields.name.errorHTML()) {%>
          <%- form.fields.name.errorHTML() %>
        <% } %>
      </th>
    </tr>
  </tfoot>
  <tbody>
    <% divisions.forEach(function(division){ %>
      <tr>
        <td><a href="division/<%= division.id %>"><%= division.id %></td>
        <td><%= division.name %></td>
        <td>
          <a href="division/<%= division.id %>/update">Edit</a>
          <a href="division/<%= division.id %>/delete">Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>