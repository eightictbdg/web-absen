<div class="row justify-content-center">
  <div class="col-md-2 col-sm-4  mb-4">
      <div class="list-group">
          <a href="/panel/admin/config" class="list-group-item list-group-item-action">Configuration</a>
          <a href="/panel/admin/schedule" class="list-group-item list-group-item-action">Schedule</a>
          <a href="/panel/admin/division" class="list-group-item list-group-item-action active">Division</a>
          <a href="/panel/admin/role" class="list-group-item list-group-item-action">Role</a>
          <a href="/panel/admin/user" class="list-group-item list-group-item-action">User</a>
          <a href="/panel/admin/csv" class="list-group-item list-group-item-action">CSV</a>
      </div>
  </div>
  <div class="col-md-9 border text-center col-sm-4 px-0 pt-2">
    <h1 class="merah">Divisions</h1>
    <div class="bar"></div>
    <br>
<div class="tablecontainer border bg-light">
  <table cellspacing="0" class="table bg-light">
    <thead class="thead-light">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>#</th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th>New</th>
        <form method="POST" class="form">
          <th><%- form.fields.name.toHTML() %></th>
          <th><button type="submit" class="btn btn-primary">Add</button></th>
        </form>
      </tr>
      <tr>
        <th></th>
        <th><%- form.fields.name.errorHTML() || '' %></th>
      </tr>
    </tfoot>
    <tbody>
      <% divisions.forEach(function(division){ %>
        <tr>
          <td><a href="division/<%= division.id %>"><%= division.id %></td>
          <td><%= division.name %></td>
          <td>
            <a href="division/<%= division.id %>/update">Edit</a>
            <a href="division/<%= division.id %>/delete">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  </div>
  </div>    
</div>
