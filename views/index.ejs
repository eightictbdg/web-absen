<% include header %>
    <h1 class="merah"><%= title %></h1>
    <div class="bar"></div>
    <h3>Welcome to Eight ICT</h3>
    <%if (locals.user) {%>
      <p class="error_msg">
        You are logged in. <br>
        User name: <%= user.name %> <br>
        User ID: <%= user.id %>  
      </p>
      <a href="/logout"><button class="button-general" type="button">Logout</button></a>
    <%} else {%>
      <p>You're not logged in, please log in.</p>
      <div class="buttoncontainer">
      <a href="/login"><button type="button" class="button-general">Login</button></a>
      <a href="/register"><button type="button" class="button-general">Register</button></a>
      </div>
    <% } %>
  <% include footer %>
