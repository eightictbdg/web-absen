<h1 class="merah">Roles</h1>
<div class="bar"></div>
<br>
<div class="tablecontainer border bg-light">
<table cellspacing="0" class="table bg-light">
  <thead class="thead-light">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>#</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>New</th>
      <form method="POST" class="form">
        <th><%- form.fields.name.toHTML() %></th>
        <th><button type="submit" class="btn btn-primary">Add</button></th>
      </form>
    </tr>
    <tr>
      <th></th>
      <th><%- form.fields.name.errorHTML() || '' %></th>
    </tr>
  </tfoot>
  <tbody>
    <% roles.forEach(function(role){ %>
      <tr>
        <td><a href="role/<%= role.id %>"><%= role.id %></td>
        <td><%= role.name %></td>
        <td>
          <a href="role/<%= role.id %>/update">Edit</a>
          <a href="role/<%= role.id %>/delete">Delete</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
</div>